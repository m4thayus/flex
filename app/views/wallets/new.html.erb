<h1>Deposit Funds</h1>

<%= render partial: "shared/error_list", locals: {object: @wallet} %>


<%= form_for @wallet do |f| %>
    <%= f.label :amount, "Amount to Deposit:" %>
    <%= f.number_field :amount %>
    <%= f.label :currency_id %>
    <%= f.collection_select(:currency_id, Currency.all, :id, :symbol, prompt: "Currency") %>
    <%= f.submit %>
<% end %>

